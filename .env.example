# Intelligent Investing - Environment Configuration
# Copy this file to .env and fill in your values

# OpenAI API (for AI context generation)
OPENAI_API_KEY=your_openai_api_key_here

# Market Data APIs (choose one or more)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use paper trading for testing

FINNHUB_API_KEY=your_finnhub_api_key_here

# News API
NEWS_API_KEY=your_newsapi_key_here

# Notification Channels
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
ALERT_EMAIL_TO=your_email@gmail.com

# Database
DATABASE_URL=sqlite:///./intelligent_investing.db

# Application Settings
LOG_LEVEL=INFO
MONITOR_INTERVAL_SECONDS=300  # 5 minutes
